<h1>Edit User Role</h1>
<%= form_for @user, url: update_role_user_path(@user), method: :patch do |f| %>
  <div class="form-group">
    <h1> Name: <%= @user.name %> </h1>
    <%= f.label :role, "Select New Role" %>
    <%= f.select :role, options_for_select([["Editor", "editor"], ["Admin", "admin"]], @user.role), class: "form-control" %>
  </div>
  <%= f.submit "Update Role", class: "btn btn-primary" %>
<% end %>
